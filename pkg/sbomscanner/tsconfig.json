{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "preserveSymlinks": true,
    "typeRoots": [
      "../../node_modules",
      "../../node_modules/@types",
      "../../node_modules/@rancher/shell/types",
      "./types"
    ],    
    "types": [
      "node",
      "webpack-env",
      "@types/node",
      "@types/jest",
      "@types/lodash",
      "rancher",
      "shell",
      "jest"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {
      "@shell/*": [
        "../../node_modules/@rancher/shell/*"
      ],
      "@components/*": [
        "@rancher/components/*"
      ],
      "@tests/*": ["./tests/*"],
      "@pkg/*": ["./*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.vue"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
